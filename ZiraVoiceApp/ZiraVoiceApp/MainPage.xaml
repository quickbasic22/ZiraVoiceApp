<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZiraVoiceApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms Zira Talking App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Editor x:Name="TextTalk" IsTextPredictionEnabled="True" IsSpellCheckEnabled="True" FontFamily="Arial" FontSize="Large" HeightRequest="100" />
        
        <Button x:Name="ZiraTalk" Text="Zira speak" Clicked="ZiraTalk_Clicked" />
    </StackLayout>

</ContentPage>
